{
  "name": "apex-kit",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{js,ts,mjs,vue,md}\" --list-different --cache",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-pkg": "^0.21.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.5.8"
  }
}
